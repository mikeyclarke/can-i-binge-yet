from datetime import datetime
from typing import TypeVar

T = TypeVar('T', bound=Task)

class Task:
    run_every: bool
    run_at: bool
    run_every_hour: bool
    run_every_minute: bool
    twice_daily: bool
    run_weekly: bool
    name: str
    def __init__(self) -> None: ...
    def every(self, time: str) -> T: ...
    def every_minute(self) -> T: ...
    def every_15_minutes(self) -> T: ...
    def every_30_minutes(self) -> T: ...
    def every_45_minutes(self) -> T: ...
    def hourly(self) -> T: ...
    def daily(self) -> T: ...
    def weekly(self) -> T: ...
    def monthly(self) -> T: ...
    def at(self, run_time: int) -> T: ...
    def at_twice(self, run_time: list[int]) -> T: ...
    def daily_at(self, run_time: int) -> T: ...
    def handle(self) -> None: ...
    def should_run(self, date: datetime | None = ...) -> bool: ...
